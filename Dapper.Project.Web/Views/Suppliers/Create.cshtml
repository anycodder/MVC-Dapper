@model Dapper.Project.Core.Entity.Suppliers

@{
    ViewData["Title"] = "Create Supplier";
}

<h2>@ViewData["Title"]</h2>
@Html.AntiForgeryToken()
<form asp-action="Create">

    <div class="form-group">
        <label asp-for="product_id" class="control-label">Product</label>
        <input asp-for="product_id" class="form-control" />
        <span asp-validation-for="product_id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="suppliers_product_brand" class="control-label"></label>
        <input asp-for="suppliers_product_brand" class="form-control" />
        <span asp-validation-for="suppliers_product_brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="suppliers_communication_information" class="control-label"></label>
        <input asp-for="suppliers_communication_information" class="form-control" />
        <span asp-validation-for="suppliers_communication_information" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="suppliers_address" class="control-label"></label>
        <input asp-for="suppliers_address" class="form-control" />
        <span asp-validation-for="suppliers_address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="suppliers_iban" class="control-label"></label>
        <input asp-for="suppliers_iban" class="form-control" />
        <span asp-validation-for="suppliers_iban" class="text-danger"></span>
    </div>
    

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>