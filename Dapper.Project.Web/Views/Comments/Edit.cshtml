@model Dapper.Project.Core.Entity.Comments

<h2>Edit Comments</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <input asp-for="comment_text" class="form-control" placeholder="Comment"/>
    </div>
    <div class="form-group">
        <input asp-for="comment_date" class="form-control" placeholder="Date"/>
    </div>
    <div class="form-group">
        <input asp-for="comment_score" class="form-control" placeholder="Score"/>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</form>