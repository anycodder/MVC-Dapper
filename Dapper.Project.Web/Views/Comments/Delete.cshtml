@model Dapper.Project.Core.Entity.Comments

@{
    ViewData["Title"] = "Delete Comment";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this comment?</h3>
<div>
    <h4>Comment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.comment_text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.comment_text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.comment_date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.comment_date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.comment_type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.comment_type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.comment_score)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.comment_score)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>